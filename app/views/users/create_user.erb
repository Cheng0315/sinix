<h2>Sign up and start structuring your next big Sinatra Project</h2>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<form action="/signup" method="POST">
  <label for="first_name">First Name </label>
  <input type="first_name" name="user[first_name]" id="first_name">

  <label for="last_name">Last Name </label>
  <input type="last_name" name="user[last_name]" id="last_name">

  <label for="email">Email </label>
  <input type="email" name="user[email]" id="email">

  <label for="password">Password </label>
  <input type="password" name="user[password]" id="password">

  <input type="submit" value="submit" id="Submit">
</form>

<br><br>

<label>Already have an account? </label><a href="/login">Log In</a>
