<h1>Edit User Info</h1>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<form action="/users/<%=@user.first_name%>-<%=@user.last_name%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label for="first_name">First Name </label>
  <input type="first_name" name="user[first_name]" id="first_name" value="<%=@user.first_name%>">

  <label for="last_name">Last Name </label>
  <input type="last_name" name="user[last_name]" id="last_name" value="<%=@user.last_name%>">

  <label for="email">Email </label>
  <input type="email" name="user[email]" id="email" value="<%=@user.email%>">

  <label for="password">Password </label>
  <input type="password" name="user[password]" id="password" value="<%=@user.password%>">

  <input type="submit" value="Submit Changes" id="Submit">
</form>
