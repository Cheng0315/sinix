<div class="form-container">
  <div class="form-content">
    <h1 class="text-align-center"><i class="fas fa-project-diagram"></i> Sinix</h1>
    <h4 class="form-group text-align-center">Where developers structure their Sinatra web applications</h4>
    <!-- Display error message if user input wrong email or password-->
    <% if flash.has?(:message) %>
      <div style="color:red;" class="text-align-center"><%= flash[:message] %> </div>
    <% end %>
    <!-- login form-->
    <div >
      <form action="/login" method="POST">
        <div class="form-group">
          <input type="email" name ="email" class="form-control" id="email" placeholder="Email">
        </div>
        <div class="form-group">
          <input type="password" name ="password" class="form-control" id="password" placeholder="Password">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary form-control" id="Submit">Login</button>
        </div>
      </form>
    </div>
    <!-- Sign up link-->
    <div class="text-align-center">
    <a href="/signup">Don't have an account? Sign up</a>
    </div>

  </div>
  <footer>
    <div class="footer-bottom">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xs-12">
            <!--Footer Bottom-->
            <p class="text-align-center">&copy; Copyright 2019 - City of USA.  All rights reserved.</p>
          </div>
        </div>
      </div>
    </div>
  </footer>
</div><!-- container-->
