<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-sm-offset-3">
      <div class="form-container form-bg-color">
        <h1 class="row justify-content-center">Sinix</h1>
      <h4 class="form-group">Where developers structured their next big Sinatra Project</h4>

      <% if flash.has?(:message) %>
        <%= flash[:message] %>
      <% end %>

      <div >
        <form action="/login" method="POST">
          <div class="form-group">
            <input type="email" name ="email" class="form-control" id="email" placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" name ="password" class="form-control" id="password" placeholder="Password">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary form-control" id="Submit">Login</button>
          </div>
        </form>
      </div>
      <div class="row justify-content-center">
      <a href="/signup">Don't have an account? Sign up</a>
    </div>
    </div>
  </div>
  </div>
</div>
