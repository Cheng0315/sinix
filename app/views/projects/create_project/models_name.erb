<h1>Please enter the name for your project and the names for your models</h1>

<form action="/projects" method="POST">

  <label for="name">Project's Name: </label>
  <input type="text" name="name" id="name">


<label for="model_name">Models Name: </label>
<%@num_of_models.times do |i|%>

    <input type="text" name="models_name[]" id="model_name" placeholder="Model <%=i%> name">
<%end%>

    <input type="submit" value="submit" id="Submit">
  </form>
