<h1>Please enter the name for your project and the names of your models(singular form).</h1>

<form action="/projects" method="POST">


  <input type="text" name="project_name" id="name" placeholder="Project Name">

  <%@num_of_models.times do |i|%>
    <input type="text" name="models[model_<%=i+1%>_name]" id="model_names" placeholder="Model <%=i+1%> name">
  <%end%>

  <input type="text" name="description" id="description" placeholder="Description">

  <input type="submit" value="Create Project" id="Submit">
</form>
