<div class="container add-margin-top list-container-bg">

  <div class='list-projects-content'>
    <h1 class="welcome-header">Welcome <%=capitalize_model_name(@user.first_name)%></h1>
    <!-- Display list of projects-->
    <div class="list-group">
      <h2 class="text-align-center">Projects</h2>
      <ul style="list-style-type: none; margin-bottom: 20px; margin-left: -38px;">
        <!-- Iterate through class Project to retrieve all the project and display them in a list-->
        <%Project.all.each do |project|%>
        <li>
          <div class="list-group-item list-group-item-action list-projects-bg">
            <div>
              <h5 style="display: inline-block"><a href="/projects/<%=project.id%>" style="text-decoration:none"><%=project.name%></a></h5>
            </div>
            <div class='project-info'>
              <div >
                <p><%=project.description%></p>
              </div>
              <div>
                <p >Date created: <%=project.date_created%></p>
              </div>
            </div>
          </div>
        </li>
        <%end%>
      </ul>
    </div><!-- list group-->
  </div>
</div><!-- container-->
