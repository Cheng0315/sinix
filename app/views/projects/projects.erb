
<div class="container">
    <div>

<h1 class="row justify-content-center">Welcome <%=capitalize_model_name(@user.first_name)%></h1>

<div class="list-group">
  <h2 class="row justify-content-center">Projects</h2>
  <ul style="list-style-type: none; margin-bottom: 50px; margin-left: -38px;">
    <%Project.all.each do |project|%>
    <li>
      <div class="list-group-item list-group-item-action list-projects-bg">
        <div>
          <h5 style="display: inline-block"><a href="/projects/<%=project.id%>" style="text-decoration:none"><%=project.name%></a></h5>
        </div>
        <div>
          <p style="margin: 0; padding: 0;" class="float-right">Date created: <%=project.date_created%></p>
        </div>
          <div >
          <p style="margin: 0; padding: 0;"><%=project.description%></p>
        </div>

      </div>
    </li>
    <%end%>
  </ul>

</div>
</div>

</div>
